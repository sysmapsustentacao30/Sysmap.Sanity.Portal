@model Sysmap.Portal.Sanity.Models.VivoRelease


@{
    ViewData["Title"] = "Cadastrar Release Vivo";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active"> Vivo Sanity</li>
                </ol>
            </div>
            <h4 class="page-title">Cadastrar Release Vivo </h4>
        </div>
    </div>
</div>

@if (ViewBag.Erro)
{
    <div class="row">
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Upload finalizado com sucesso!</h4>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Formulário de cadastro:</h4>
                <p class="text-muted">
                    <h5>Atenção: </h5>
                    <ul>
                        <li>Todos os campos(dados e sequencia dos campos) da planilha devem estar conforme o combinado.</li>
                    </ul>
                </p>
                <form enctype="multipart/form-data" method="post" asp-action="CadastrarReleaseVivo" asp-controller="Vivo">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>CRQ da release: </label>
                        <input type="text" asp-for="CodRelease" class="form-control" />
                        <span asp-validation-for="CodRelease" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Data da Release: </label>
                            <input type="date" asp-for="DataRelease" class="form-control" />
                            <span asp-validation-for="DataRelease" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Quantidade de testes: </label>
                            <input type="number" name="qtdTestes" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Planilha: </label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" id="file" name="excel">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-success btn-rounded" id="uploadButton"><i class="fas fa-save"></i> Cadastrar</button> | <a href="@Url.Action("VivoHome","Vivo")" class="btn btn-outline-secondary btn-rounded"><i class="fas fa-backward"></i> Voltar</a>
                </form>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>


@section scripts{

    <script src="~/assets/js/jquery.loading.block.js"></script>
    <script type="text/javascript" charset="utf-8">
        $(function () {
            $('#uploadButton').click(function () {
                $.loadingBlockShow({
                    imgPath: '/images/default.svg'
                });
            });
        });
    </script>
}