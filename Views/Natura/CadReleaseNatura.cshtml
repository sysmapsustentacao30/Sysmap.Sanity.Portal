@model Sysmap.Portal.Sanity.Models.NaturaRelease

@{
    ViewData["Title"] = "CadCaptaNatura";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li><a asp-action="NaturaHome" asp-controller="Natura">Natura</a> <i class="fas fa-angle-right"></i> </li>
                    <li class="active"> Cad Release</li>
                </ol>
            </div>
            <h4 class="page-title">Cadastrar Release</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-7">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Importar Testes</h4>

                <p class="text-muted">
                    <h5>Atenção: </h5>
                    <ul>
                        <li>Todos os campos(dados e sequencia dos campos) da planilha deve estar conforme o combinado.</li>
                        <li>No campo de "Quatidade de testes" deve ser informado a quantidade exata que possui na planilha.</li>
                        @*<li>Download demo da planilha: <a href="@Url.Action("ReleaseDemoNatura","Natura",new { idRelease = 12} )"><i class="fas fa-file-excel"></i> TesteRelease.xls</a></li>*@
                    </ul>
                </p>
                <form enctype="multipart/form-data" asp-action="CadReleaseNatura" asp-controller="Natura" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="example-number">Quantidade total de testes: </label>
                            <input class="form-control" type="number" asp-for="qtdTestes">
                            <span asp-validation-for="qtdTestes" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="example-number">Sistema: </label>
                            <input class="form-control" type="text" asp-for="sistema">
                            <span asp-validation-for="sistema" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="col-form-label">Data de inicio: </label>
                            <input type="date" class="form-control" asp-for="data_inicial" />
                            <span asp-validation-for="data_inicial" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label">Data final: </label>
                            <input type="date" class="form-control" asp-for="data_final"/>
                            <span asp-validation-for="data_final" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Planilha: </label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" id="file" name="file">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-success btn-rounded"><i class="fas fa-save"></i> Salvar</button> | <a href="@Url.Action("NaturaHome","Natura")" class="btn btn-outline-secondary btn-rounded"><i class="fas fa-backward"></i> Voltar</a>
                </form>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>